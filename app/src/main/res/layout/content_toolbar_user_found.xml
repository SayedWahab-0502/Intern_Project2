<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/random_users">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            android:layout_marginTop="20dp"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo3x"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"></ImageView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginTop="160dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:paddingLeft="25dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/female_image2">
                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textview_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="Jennifer"
                    android:textAlignment="center"
                    android:paddingVertical="6dp">

                </TextView>




            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/vs_pic"
                    android:layout_marginTop="105dp"></ImageView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="50dp"
                android:paddingRight="25dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/men_image">
                    </ImageView>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/textview_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:text="Rob"
                    android:textAlignment="center"
                    android:paddingVertical="6dp">

                </TextView>




            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:gravity="bottom">

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/continue_button"
                android:textSize="20sp"
                android:text="continue"
                android:fontFamily="@font/montserrat_bolditalic"
                android:textColor="#fff"
                android:id="@+id/id_continue_btn">

            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">


            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/background_button"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat_bolditalic"
                android:text="retry"
                android:textColor="#fff"
                android:id="@+id/id_retry">

            </Button>

        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>